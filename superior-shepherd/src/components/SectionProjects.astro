---
import { Icon } from "astro-icon";
import { Image } from "astro:assets";

import ArticleProjects from "./ArticleProjects.astro";
import image1 from "../screens/provisional1.jpg";
---

<section class="mt-12 px-7 mx-7 max-w-[1000px] mx-auto">
  <!-- <h1 class="mb-4 text-df-text underline underline-offset-8 text-2xl font-extrabold leading-none tracking-tight md:text-3xl lg:text-4xl">Proyectos</h1> -->
  <h1
    class="mb-4 text-df-text underline underline-offset-8 text-2xl font-extrabold leading-none tracking-tight md:text-3xl lg:text-4xl"
  >
    Proyectos
  </h1>
  <p class="text-df-text mt-5 mb-3">Algunos de mis trabajos</p>

  <div id="cards">
    <div class="card" id="card_1">
      <ArticleProjects
        title="Licencias provisionales"
        description="Permite a los emprendedores obtener rápidamente las autorizaciones necesarias para desplegar sus ideas y proyectos en los espacios públicos de la ciudad de Piura - Perú."
        image={image1}
        class="card__content"
      >
        <>
          <div class="flex gap-1 pb-1.5">
            
            
            <!-- <div class="group">              
              <Icon name="react" class="" />
              <p class="p-0 m-0 text-df-background text-xs text-center font-semibold underline leading-none invisible group-hover:visible">React</p>
            </div> -->

            <div class="relative group text-center">
              <Icon name="react" class="p-0 m-0 transition-all duration-500 ease-in-out group-hover:-translate-y-2" />                    
              <p class="absolute top-0 w-full text-center text-xs font-semibold mt-3 opacity-0 transition-opacity duration-0 group-hover:translate-y-full group-hover:opacity-100 group-hover:duration-500">React</p>
            </div> 


            <div class="relative group text-center">
              <Icon name="redux" class="p-0 m-0 transition-all duration-500 ease-in-out group-hover:-translate-y-2" />                    
              <p class="absolute top-0 w-full text-center text-xs font-semibold mt-3 opacity-0 transition-opacity duration-0 group-hover:translate-y-full group-hover:opacity-100 group-hover:duration-500">Redux</p>
            </div> 

            <!-- <div class="group">              
              <Icon name="redux" class="" />
              <p class="p-0 m-0 text-df-background text-xs text-center font-semibold underline leading-none invisible group-hover:visible">Redux</p>
            </div> -->
            
            <!-- <div class="group">              
              <Icon name="bootstrap" class="" />
              <p class="p-0 m-0 text-df-background text-xs text-center font-semibold underline leading-none invisible group-hover:visible">Bootstrap</p>
            </div> -->

            <div class="relative group text-center">
              <Icon name="bootstrap" class="p-0 m-0 transition-all duration-500 ease-in-out group-hover:-translate-y-2" />                    
              <p class="absolute top-0 w-full text-center text-xs font-semibold mt-3 opacity-0 transition-opacity duration-0 group-hover:translate-y-full group-hover:opacity-100 group-hover:duration-500">Bootstrap</p>
            </div> 
          </div>

          <div class="flex pb-1.5">            
            <div class="relative group">
              <Icon name="django" class="py-1 m-0 transition-all duration-500 ease-in-out group-hover:-translate-y-2" />                  
              <p class="absolute top-0 w-full text-center text-xs font-semibold mt-3 opacity-0 transition-opacity duration-0 group-hover:translate-y-full group-hover:opacity-100 group-hover:duration-500">Django</p>
            </div>  
            <div class="relative group">
              <Icon name="sql-server" class="py-0.5 m-0 transition-all duration-500 ease-in-out group-hover:-translate-y-2" />                  
              <p class="absolute top-0 w-full text-center text-xs font-semibold mt-3 opacity-0 transition-opacity duration-0 group-hover:translate-y-full group-hover:opacity-100 group-hover:duration-500">MSSQL</p>
            </div>  
          </div>

          <div class="flex pb-1.5">                        
            <div class="relative group">
              <Icon name="apache" class="p-0 m-0 transition-all duration-500 ease-in-out group-hover:-translate-y-2" />                  
              <p class="absolute top-0 w-full text-center text-xs font-semibold mt-3 opacity-0 transition-opacity duration-0 group-hover:translate-y-full group-hover:opacity-100 group-hover:duration-500">Apache</p>
            </div>                      
            <div class="relative group">
              <Icon name="ubuntu" class="p-0 m-0 transition-all duration-500 ease-in-out group-hover:-translate-y-2" />                    
              <p class="absolute top-0 w-full text-center text-xs font-semibold mt-3 opacity-0 transition-opacity duration-0 group-hover:translate-y-full group-hover:opacity-100 group-hover:duration-500">Ubuntu</p>
            </div>
          </div>
        </>
      </ArticleProjects>
    </div>

    <div class="card" id="card_2">
      <ArticleProjects
        title="Licencias provisionales"
        description="Permite a los emprendedores obtener rápidamente las autorizaciones necesarias para desplegar sus ideas y proyectos en los espacios públicos de la ciudad de Piura - Perú."
        image={image1}
        class="card__content"
      >
        <>
          <div class="flex gap-1">
            <Icon name="react" class="" />
            <Icon name="redux" class="" />
            <Icon name="bootstrap" class="" />
          </div>
          <div class="flex">
            <Icon name="django" class="py-1" />
            <Icon name="sql-server" class="py-0.5" />
          </div>
          <div class="flex">
            <Icon name="apache" class="p-0 m-0" />
            <Icon name="ubuntu" class="p-0 m-0" />
          </div>
        </>
      </ArticleProjects>
    </div>

    <div class="card" id="card_3">
      <ArticleProjects
        title="Licencias provisionales"
