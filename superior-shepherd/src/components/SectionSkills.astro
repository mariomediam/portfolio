---
import Atropos from 'atropos';
import skill from "../data/skill";
import ArticleSkill from "./ArticleSkill.astro";
---

<section class="bg-dfBgSection mt-12 pt-8 pb-10 px-8">
  <h1
    class="mb-6 text-dfText text-center underline underline-offset-8 text-2xl font-extrabold leading-none tracking-tight md:text-3xl lg:text-4xl"
  >
    Habilidades
  </h1>

  <!-- Icons -->
  <div
    class=`flex gap-2 items-center justify-center lg:justify-between flex-wrap pt-6 text-dfText`
  >
    {
      skill.map((ability) => (
        <ArticleSkill ability={ability} />
      ))
    }
  </div>
</section>

<script src="/css/atropos.min.js" is:inline></script>
<script>
  const elements = document.querySelectorAll('.my-atropos');
  elements.forEach((el) => {
    Atropos({ el });
  });
</script>
